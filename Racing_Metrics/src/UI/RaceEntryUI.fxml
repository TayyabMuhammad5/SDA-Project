<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RaceEntryController" stylesheets="@styles.css" style="-fx-padding:12; -fx-background-color:#0b0b0b;">
  <top>
    <HBox spacing="8">
      <Button text="â† Back to Dashboard" onAction="#backToDashboard" />
      <Label text="Race Entry" style="-fx-text-fill:#fff; -fx-font-size:16; -fx-font-weight:bold;" />
    </HBox>
  </top>
  <center>
    <VBox spacing="8">
      <TableView fx:id="raceTable" prefHeight="400">
