          <TableColumn fx:id="colRaceLocation" text="Location" prefWidth="200" />
          <TableColumn fx:id="colRaceWeather" text="Weather" prefWidth="120" />
        </columns>
      </TableView>
      <HBox spacing="8">
        <Button text="Add Race" />
        <Button text="Edit Race" />
      </HBox>
    </VBox>
  </center>
</BorderPane>
