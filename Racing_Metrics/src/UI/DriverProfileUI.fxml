<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DriverProfileController" stylesheets="@styles.css" style="-fx-padding:12; -fx-background-color:#0b0b0b;">
  <top>
    <HBox spacing="8">
