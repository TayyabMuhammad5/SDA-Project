<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.TireUsageController"
            stylesheets="@styles.css"
            style="-fx-padding:12; -fx-background-color:#0b0b0b;">

    <top>
        <HBox spacing="8">
            <Button text="â† Back to Dashboard" onAction="#backToDashboard" />
            <Label text="Tire Usage" style="-fx-text-fill:#fff; -fx-font-size:16; -fx-font-weight:bold;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="8">

            <HBox spacing="8">
                <Label text="Race:" style="-fx-text-fill:#fff;"/>
                <ComboBox fx:id="cbRace"/>

                <Label text="Driver:" style="-fx-text-fill:#fff;"/>
                <ComboBox fx:id="cbDriver"/>

                <Label text="Tire Type:" style="-fx-text-fill:#fff;"/>
                <ComboBox fx:id="cbTireType"/>

                <Label text="Laps:" style="-fx-text-fill:#fff;"/>
                <TextField fx:id="tfLapsUsed"/>

                <Button text="Save" onAction="#saveUsage"/>
                <Button text="Export CSV" onAction="#exportCsv"/>
            </HBox>

            <TableView fx:id="table" prefHeight="360">
                <columns>
                    <TableColumn fx:id="colNo" text="No" prefWidth="50"/>
                    <TableColumn fx:id="colDriver" text="Driver" prefWidth="150"/>
                    <TableColumn fx:id="colTire" text="Tire" prefWidth="100"/>
                    <TableColumn fx:id="colLaps" text="Laps Used" prefWidth="80"/>
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
