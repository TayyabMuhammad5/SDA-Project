<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.RaceResultsController"
            stylesheets="@styles.css"
            style="-fx-padding:12; -fx-background-color:#0b0b0b;">

    <top>
        <HBox spacing="8">
            <Button text="â† Back to Dashboard" onAction="#backToDashboard" />
            <Label text="Race Results" style="-fx-text-fill:#fff; -fx-font-size:16; -fx-font-weight:bold;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="8">
            <HBox spacing="8">
                <Label text="Race:" style="-fx-text-fill:#fff;" />
                <ComboBox fx:id="cbRace" onAction="#loadResults"/>
            </HBox>

            <TableView fx:id="tableResults" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colPos" text="Pos" prefWidth="50"/>
                    <TableColumn fx:id="colDriver" text="Driver" prefWidth="150"/>
                    <TableColumn fx:id="colTeam" text="Team" prefWidth="150"/>
                    <TableColumn fx:id="colPoints" text="Points" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>

